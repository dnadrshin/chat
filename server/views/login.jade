extends layout

block content
  h2 Log In

  form(action="/login",method="post")
    div.form-group
      label Username
      input.form-control(type="text",name="username")

    div.form-group
      label Password
      input.form-control(type="password",name="password")

    div.form-group
      input.form-control(type="submit",value="Log In")
